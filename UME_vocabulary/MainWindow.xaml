<Window x:Class="UME_vocabulary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UME_vocabulary"
        mc:Ignorable="d"
        Title="UME_vocabulary" Height="350" Width="525"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="{x:Null}">
    <Grid>
        <Border Padding="20,0,20,0" HorizontalAlignment="Center" Background="#f0fff0" BorderBrush="#22b14c" BorderThickness="0,0,0,1">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock Foreground="#22b14c" x:Name="_vocabularyTextBlock">UME_vocabulary</TextBlock>
                <RadioButton Margin="5,0,0,0" Foreground="#00a2e8" x:Name="_rememberedRadioButton" Checked="_rememberedRadioButton_Checked">记住了</RadioButton>
                <RadioButton Margin="5,0,0,0" Foreground="#ed1c24" x:Name="_exitRadioButton" Checked="_exitRadioButton_Checked">关闭</RadioButton>
            </StackPanel>
        </Border>
    </Grid>
</Window>

@model Agile.API.Dtos.H10013Response
@{
    Layout = "~/Views/Shared/_WithFrameLayout.cshtml";
}

<style type="text/css">
    .applist {
        width: 1000px;
        height: 70px;
    }

        .applist li {
            float: left;
            list-style: none;
            width: 240px;
            height: 70px;
            margin-right: 10px;
        }
</style>

<div>
    <div class="newline"></div>
    <div>
        <div style="float:left;color:#22b14c;">
            网页小工具
        </div>
        <div style="float:right;margin-right:10px;">
            <a onclick="changeapplist('@((int)Agile.API.Dtos.H10013ResponseListItemAppTypeEnum.WebPage)')" href="javascript:void(0);">更多</a>
        </div>
        <div style="clear:both;"></div>
    </div>
    <div class="newline"></div>
    <div class="splitter-d" style="width:990px;"></div>
</div>
@if (Model.webapps != null && Model.webapps.Any())
{
    <ul class="applist">
        @foreach (var item in Model.webapps)
        {
            <li>
                <div class="newline"></div>
                <div style="background-color:#f7f7fa;padding:10px;">
                    <div style="color:#22b14c;">@item.title</div>
                    <a href="javascript:void(0);" onclick="openlink('@item.href')">@item.href</a>
                </div>
            </li>
        }
    </ul>
    <div style="clear:left;"></div>
}
else
{
    <div class="newline"></div>
    <div style="background-color:#f7f7fa;padding:10px;width:970px;">
        <div style="color:#22b14c;">没有相关数据</div>
    </div>
}


    function openlink(href) {
        var url = '@Url.Content("~/")' + 'App/' + href;
        window.location.href = url;
    }

    function changeapplist(apptype) {
        var url = '@Url.Content("~/")' + "Home/AppList?apptype=" + apptype;
        window.location.href = url;
    }
</script>

@{
    Layout = "~/Views/Shared/_WithFrameLayout.cshtml";
    var ad = ViewBag.ad as Agile.API.Dtos.H10100ResponseListItem;
}

@RenderSection("styles", required: false)

<div style="width:100%;">
    <div style="width:700px;float:left;">
        <div style="height:40px;line-height:40px;">
            <span style="color:#22b14c;">@ViewBag.apptypedisplay</span>&nbsp;<span style="color:#22b14c;">-</span>&nbsp;
            <span style="color:#22b14c;">@ViewBag.apptitle</span>
        </div>
        <div class="splitter-d"></div>
        <div class="newline"></div>
        @RenderBody()
    </div>
    <div style="margin-left:720px;">
        <div style="height:40px;line-height:40px;">
            <div style="float:left;">
                <span style="color:#22b14c;">打赏</span>
            </div>
            <div style="float:right;">
                <a href="javascript:void(0);" onclick="linkto('@Url.Content("~/Home/Donate")','_blank')">查看打赏列表</a>
            </div>
            <div style="clear:both;"></div>
        </div>
        <div class="splitter-d"></div>
        <div class="newline"></div>
        <div style="color:#22b14c;">
            <span style="color:#00a2e8;" onclick="showqrcode('alipay')">支付宝</span>&nbsp;|&nbsp;
            <span onclick="showqrcode('tenpay')">微信</span>
        </div>
        <div class="newline"></div>
        <div id="alipaydiv">
            <img style="max-width:100%;" src="@Url.Content("~/Assets/Images/alipay.jpg")" />
        </div>
        <div id="tenpaydiv" style="display:none;">
            <img style="max-width:100%;" src="@Url.Content("~/Assets/Images/tenpay.jpg")" />
        </div>
        @if (ad != null && !string.IsNullOrEmpty(ad.Url))
        {
            <div class="newline"></div>
            <div style="height:40px;line-height:40px;">
                <span style="color:#22b14c;">赞助商</span>
            </div>
            <div class="splitter-d"></div>
            <div class="newline"></div>
            <div style="border:1px solid #22b14c;">
                <img style="width:100%;" src="@Url.Content("~/Content/ad/"+ad.Cover)" onclick="window.open('@ad.Url', '_blank');" />
                <div style="position:relative;margin-top:-28px;padding-left:5px;background-color:rgba(255,255,255,0.8);width:100%;height:28px;line-height:28px;">
                    <a href="@ad.Url" target="_blank" title="@ad.Title">￥<span>@ad.Price</span>&nbsp;<span>@ad.TitleDisplay</span></a>
                </div>
            </div>
        }
    </div>
    <div style="clear:both;"></div>
</div>

@section scripts
{
    <script type="text/javascript">
        function showqrcode(pay) {
            if (pay == "alipay") {
                $("#alipaydiv").show();
                $("#tenpaydiv").hide();
                return;
            }

            $("#tenpaydiv").show();
            $("#alipaydiv").hide();
        }
    </script>
}

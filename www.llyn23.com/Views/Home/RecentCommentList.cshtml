@model Agile.Dtos.API.H10012Response
@{
    Layout = null;
}

<ul class="list-group">
    <li class="list-group-item active">
        评论列表
    </li>
    @if (Model.data == null || Model.data.Count == 0)
    {
        <li class="list-group-item">
            未找到相关记录
        </li>
    }
    else
    {
        foreach (var item in Model.data)
        {
            <li class="list-group-item">
                @if (String.IsNullOrEmpty(item.username))
                {
                    <span>匿名评论</span><span>&#58;</span><span>@item.content</span>
                }
                else
                {
                    <a href="javascript:void(0)">@item.username</a><span>&#58;</span><span>@item.content</span>
                }
            </li>
        }
    }
</ul>